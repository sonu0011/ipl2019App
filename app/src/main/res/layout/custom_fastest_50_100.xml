<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardElevation="3dp"

    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/four_sixes_image"
        android:layout_width="111dp"
        android:layout_height="88dp"
        android:layout_centerHorizontal="true"

        android:src="@drawable/photo_missing" />

    <TextView
        android:id="@+id/four_sixes_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/four_sixes_image"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#b3ffffff"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/four_sixes_feat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/four_sixes_name"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#fff"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/four_sixes_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/four_sixes_image"
        android:layout_marginLeft="20dp"
        android:text=""
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="#000"
        android:background="@drawable/small_circle"
        android:textSize="10dp"/>
</RelativeLayout>
         />
</android.support.v7.widget.CardView>