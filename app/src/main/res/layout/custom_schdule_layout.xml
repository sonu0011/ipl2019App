<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="1dp"
    app:cardElevation="2dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/schdule_match_no"
            android:layout_width="50dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:background="@drawable/textview_bg"
            android:gravity="center"
            android:text="#1"
            android:textStyle=""
            android:textColor="#fff"
            android:textSize="16sp" />

        <LinearLayout
            android:gravity="center"
            android:id="@+id/liner_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/schdule_match_no"
            android:layout_toEndOf="@+id/schdule_match_no"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/schdule_match_team1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:src="@drawable/kxi_logo" />

            <TextView
                android:id="@+id/schdeule_vs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:text="VS"
                android:textColor="#000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/schdule_match_team2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="3"
                android:src="@drawable/srh_logo" />
        </LinearLayout>

        <LinearLayout
        android:gravity="center"
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/liner_layout_1"
            android:layout_toEndOf="@+id/schdule_match_no"

            android:orientation="horizontal"

            android:weightSum="10">

            <TextView
                android:id="@+id/schdule_date_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="29 March 2019 8:00PM "
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/schdeult_stadium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="10dp"
                android:text="M. Chinnaswamy Stadium , Bangalore"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>