<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nice_color"
    android:id="@+id/full_drawer_relative_layout"
    tools:context=".Activity.DrawerFullActivity">
    <TextView
        android:onClick="backpressed"
        android:id="@+id/full_drawer_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="14dp"
        android:background="@drawable/ic_chevron_left_black_24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="14sp"
        android:padding="5dp"
        android:id="@+id/full_drawer_toolbar_text"
        android:layout_alignTop="@+id/full_drawer_back"
        android:layout_centerHorizontal="true"
        android:text="Most Maiden Overs"/>
    <TextView
        android:layout_marginTop="15dp"


        android:layout_below="@+id/full_drawer_toolbar_text"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"/>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="50dp"
        android:id="@+id/full_drawer_recycleview"
        android:layout_below="@+id/full_drawer_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>