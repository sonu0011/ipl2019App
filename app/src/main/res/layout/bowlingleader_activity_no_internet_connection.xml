<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"

    tools:context=".Activity.BowlingLeaderActivity"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/no_Connetction"
            android:src="@drawable/no_connection_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:id="@+id/no_Connetction"
            android:textSize="14sp"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:text="No Internet Connection"/>
        <TextView
            android:layout_below="@+id/no_Connetction"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:padding="10dp"
            android:textColor="#6d000000"
            android:id="@+id/no_connection_par"
            android:layout_height="wrap_content"
            android:text="@string/no_internet"/>
       <TextView
           android:layout_below="@+id/no_connection_par"
           android:layout_width="200dp"
           android:gravity="center"
           android:id="@+id/no_internet_btn"
           android:padding="10dp"
           android:layout_marginTop="30dp"
           android:text="Turn On Internet"
           android:textAllCaps="false"
           android:textColor="#fff"
           android:background="@drawable/btn_desing"
           android:layout_centerHorizontal="true"
           android:layout_height="wrap_content"
           />

    </RelativeLayout>
</android.support.v7.widget.CardView>