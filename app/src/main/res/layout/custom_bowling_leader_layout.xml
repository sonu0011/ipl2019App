<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="1dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/colorPrimary"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bowling_image"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="1dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/kohli" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"

        android:textSize="10sp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/bowling_image"
        android:layout_alignTop="@+id/bowling_image"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/bowling_position"
        android:background="@drawable/small_circle_green"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/bowling_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bowling_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Virat Kohli"
        android:textColor="#fff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/bowling_feat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bowling_name"
        android:layout_centerHorizontal="true"
        android:text="20 Wickets"
        android:textColor="#b3ffffff"
        android:textSize="12sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>