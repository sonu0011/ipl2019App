<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardElevation="3dp"

    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/longest_six_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/photo_missing" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""

        android:textSize="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_alignTop="@+id/longest_six_image"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/longest_six_position"
        android:background="@drawable/small_circle1"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/longest_six_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/longest_six_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="#b3ffffff"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/longest_six_feat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/longest_six_name"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#fff"
        android:textSize="12dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
